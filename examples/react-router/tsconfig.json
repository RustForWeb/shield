{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "~/*": ["./app/*"],
            "~assets/*": ["./assets/*"]
        },
        "rootDirs": [".", "./.react-router/types"],
        "types": ["vite/client"]
    },
    "extends": "../../tsconfig.base.json",
    "include": ["**/*", "**/.server/**/*", "**/.client/**/*", ".react-router/types/**/*"]
}
